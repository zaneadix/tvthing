{
    "name": "tvthing",
    "description": "A thing for TV",
    "version": "0.0.1",
    "author": "Seth Davenport <seth@rangle.io> (http://github.com/SethDavenport)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rangle/api-koa-starter.git"
    },
    "bugs": {
        "url": "https://github.com/rangle/rangle-starter/issues"
    },
    "scripts": {
        "build": "npm run clean && npm run server:prod && npm run client:dev",
        "clean": "rimraf coverage build",
        "lint": "eslint .",
        "daemon:start": "cross-env PROJECT_ENV=prod forever --uid tvthing -a -c 'node --require babel-polyfill' start ./build/app.js",
        "daemon:stop": "forever stop tvthing || true",
        "client:prod": "",
        "client:dev": "webpack --watch --config ./config/webpack.dev.conf",
        "server:prod": "babel server -d build && cp -r server/templates build/templates",
        "server:dev": "cross-env PROJECT_ENV=dev nodemon --exec babel-node server/app.js",
        "server:start": "cross-env PROJECT_ENV=prod node --require babel-polyfill ./build/app.js",
        "server:test": "cross-env PROJECT_ENV=testing yarn server:test:ci",
        "server:test:ci": "cross-env NODE_ENV=test nyc --all mocha",
        "server:test:mocha:watch": "mocha --watch",
        "server:test:watch": "cross-env PROJECT_ENV=testing npm run server:test:mocha:watch"
    },
    "dependencies": {
        "axios": "^0.15.3",
        "babel": "^6.5.2",
        "babel-core": "^6.21.0",
        "babel-plugin-syntax-async-functions": "^6.1.4",
        "babel-plugin-transform-object-rest-spread": "^6.20.2",
        "babel-plugin-transform-regenerator": "^6.1.4",
        "babel-polyfill": "^6.1.4",
        "babel-preset-es2015": "^6.13.0",
        "co": "^4.6.0",
        "debug": "^2.2.0",
        "koa": "^2.0.0",
        "koa-body": "^1.4.0",
        "koa-convert": "^1.2.0",
        "koa-ejs": "^3.0.0",
        "koa-helmet": "^2.0.0",
        "koa-morgan": "^1.0.1",
        "koa-router": "^7.0.1",
        "koa-static": "^3.0.0",
        "ramda": "^0.22.1",
        "request": "^2.79.0",
        "vue": "^2.1.8",
        "vue-resource": "^1.0.3",
        "winston": "^2.2.0"
    },
    "devDependencies": {
        "babel-cli": "^6.8.0",
        "babel-eslint": "^7.0.1",
        "babel-loader": "^6.2.10",
        "babel-plugin-istanbul": "^2.0.3",
        "babel-plugin-transform-runtime": "^6.15.0",
        "babel-register": "^6.9.0",
        "bulma": "^0.2.3",
        "chai": "^3.5.0",
        "cross-env": "^3.1.3",
        "css-loader": "^0.26.1",
        "eslint": "^3.0.1",
        "extract-text-webpack-plugin": "^1.0.1",
        "forever": "^0.15.2",
        "html-webpack-plugin": "^2.24.1",
        "mocha": "^3.0.0",
        "mockery": "^2.0.0",
        "node-sass": "^4.1.1",
        "nodemon": "^1.9.2",
        "nyc": "^8.3.2",
        "rimraf": "^2.5.3",
        "sass-loader": "^4.1.1",
        "sinon": "^1.17.3",
        "style-loader": "^0.13.1",
        "supertest": "^2.0.0",
        "supertest-as-promised": "^4.0.1",
        "vue-html-loader": "^1.2.3",
        "vue-loader": "^10.0.2",
        "vue-router": "^2.1.1",
        "vue-template-compiler": "^2.1.8",
        "vuex": "^2.1.1",
        "webpack": "^1.14.0",
        "webpack-merge": "^2.0.0"
    },
    "nyc": {
        "check-coverage": true,
        "lines": 65,
        "branches": 58,
        "functions": 81,
        "statements": 65,
        "reporter": [
            "lcov",
            "text"
        ],
        "exclude": [
            "**/*.spec.js",
            "test/**",
            "env/**",
            "docs/**",
            "build/**"
        ],
        "require": [
            "babel-register",
            "babel-polyfill"
        ],
        "sourceMap": false,
        "instrument": false
    }
}
